{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}


{{! The big featured header on the homepage, with the site logo }}
<header class="main-header" {{#if @site.cover_image}}style="background-image: url({{@site.cover_image}})" {{/if}}>
    {{#if @site.logo}}
    <p><a href="{{@site.url}}"><img src="{{@site.logo}}" alt="logo" /></a></p>
    {{else}}
    <h1><a href="{{@site.url}}">{{@site.title}}</a></h1>
    {{/if}}</a></p>
</header>

{{! Comment this if you are not using static pages}}
{{> menu}}

{{#post}}
<main>
    <article class="{{post_class}} single">
        {{! Each post has the blog logo at the top, with a link back to the home page }}
        <header>
            <h1>{{{title}}}</h1>
        </header>

        {{#if feature_image}}
        <figure class="post-full-image" style="background-image: url({{feature_image}})">
        </figure>
        {{/if}}

        {{! Everything inside the #post tags pulls data from the post }}
        {{content}}

    </article>
</main>
{{/post}}

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}
<script>
$(function() {
    var $postContent = $(".post-full-content");
    $postContent.fitVids();
});
</script>
{{/contentFor}}
